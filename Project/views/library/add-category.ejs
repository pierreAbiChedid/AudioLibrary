<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/<% if (editing) { %>edit-category<% } else { %>add-category<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= category.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= category.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" name="updatedDate" id="updatedDate" value="<%= new Date()%>">
            <% } %>
                <input type = "hidden" name="createdDate" id="createdDate" value="<%= new Date()%>">
            <% if (editing) { %>
                <input type="hidden" value="<%= category._id %>" name="categoryId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Category<% } else { %>Add Category<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>